#:kivy 1.11.1

<GameScreen>:

    dictionary: dictionary
    key: key
    input: input
    output: output


    FloatLayout:
        pos: 0, 0
        size: root.width, root.height

        Image:
            source: "vape.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: None, None
            size: root.width, root.height

        Button:
            text: 'Quit'
            on_press: app.Exit()
            pos_hint:  {'x':0.8, 'y':0.87}
            size_hint: None, None
            size: root.width * 0.05, root.height * 0.05

        GridLayout:
            cols: 2
            pos_hint: {'x': .2, 'y': .5}
            size_hint: None, None
            size: root.width * 0.6, root.height * 0.1

            Label:
                text: 'Input:'
                bold: True
                font_size: 22

            Label:
                text: 'Output:'
                bold: True
                font_size: 22

            Button:
                text: 'Paste to Input'
                on_press:
                    root.paste_input()

            Button:
                text: 'Copy form Output'
                on_press:
                    root.copy_output()

        GridLayout:
            cols: 2
            pos_hint: {'x': .2, 'y': .3}
            size_hint: None, None
            size: root.width * .6, root.height * .2

            TextInput:
                id: input
                background_color: 0.5, 0.7, 1, 0.7
                foreground_color: 1, 1, 1, 1
                font_size: 18
                bold: True

            TextInput:
                id: output
                background_color: 0.5, 0.7, 1, 0.7
                foreground_color: 1, 1, 1, 1
                font_size: 18
                bold: True

        Button:
            text: 'Encode'
            pos_hint: {'x':0.2 , 'y':0.1 }
            size_hint: 0.3, 0.1
            on_press:
                root.encrypt()

        Button:
            text: 'Decode'
            pos_hint: {'x':0.5 , 'y':0.1 }
            size_hint: 0.3, 0.1
            on_press:
                root.decrypt()

        Label:
            text: 'Dictionary:'
            pos_hint: {'x': 0.2, 'y': 0.7}
            size_hint: None, None
            size: root.width * .3, root.height * .1
            bold: True
            font_size: 22

        TextInput:
            id: dictionary
            pos_hint: {'x': 0.4, 'y': 0.7}
            size_hint: None, None
            size: root.width * .2, root.height * .1
            background_color: 0.5, 0.7, 1, 0.7
            foreground_color: 1, 1, 1, 1
            font_size: 18
            bold: True

        Label:
            text: 'Key:'
            pos_hint: {'x': 0.2, 'y': 0.6}
            size_hint: None, None
            size: root.width * .3, root.height * .1
            bold: True
            font_size: 22


        TextInput:
            id: key
            pos_hint: {'x': 0.4, 'y': 0.6}
            size_hint: None, None
            size: root.width * .2, root.height * .1
            background_color: 0.5, 0.7, 1, 0.7
            foreground_color: 1, 1, 1, 1
            font_size: 18
            bold: True

        Label:
            text: 'EncoFun                                                                                              '
            pos_hint: {'x': 0.1, 'y': .85}
            size_hint: None, None
            size: root.width * .8, root.height * .1
            bold: True
            font_size: 40